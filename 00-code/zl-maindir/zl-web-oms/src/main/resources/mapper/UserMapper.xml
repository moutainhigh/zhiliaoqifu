	<select id="getUserByPhoneNo" parameterType="User" resultMap="UserResultMap">
		 select 
	  		<include refid="UserColumns" />
		 from tb_web_user m 
		 where m.phone_no=#{phoneNo} 
		 	and m.data_stat='0'
		 	and m.login_type=#{loginType}
	</select>
</mapper>
